				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"value": {
			"bsonType": "string",
			"description": "邀请码",
			"title": "邀请码",
			"trim": "both"
		},
		"status": {
			"bsonType": "bool",
			"defaultValue": false,
			"title": "生效状态"
		},
		"date": {
			"bsonType": "string",
			"title": "创建时间",
			"description": "创建时间"
			
		}
