			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"user_name_type": {
			"bsonType": "int",
			"title": "账号平台",
			"description": "账号平台：0 微博 1 抖音",
			"defaultValue": 0,
			"enum": [{
					"value": 0,
					"text": "微博"
				},
				{
					"value": 1,
					"text": "抖音"
				}
			]
		},
		"user_type": {
			"bsonType": "int",
			"title": "使用状态",
			"description": "使用状态：0 资源 1 平台",
			"defaultValue": 0,
			"enum": [{
					"value": 0,
					"text": "资源"
				},
				{
					"value": 1,
					"text": "平台"
				}
			]
		},
		"user_name": {
			"bsonType": "string",
			"title": "账号昵称",
			"description": "账号昵称",
