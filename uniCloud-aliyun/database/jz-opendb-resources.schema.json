{
	"bsonType": "object",
	"required": [
		"author",
		"title"
	],
	"permission": {
		"read": "doc.state || auth.uid == doc.user_id || 'AUDITOR' in auth.role",
		"create": "auth.uid != null",
		"update": "'AUDITOR' in auth.role||auth.uid == doc.user_id",
		"delete": "auth.uid == doc.user_id"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（用户 ID），系统自动生成"
		},
		"user_id": {
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id",
			"permission": {
				"write": false
			}
		},
		"categories": {
			"bsonType":"string",
			"description": "分类",
			"title":"分类",
			"trim": "both"
		},
		"categorieszw": {
			"bsonType":"string",
			"description": "分类中文",
			"title":"分类中文",
			"trim": "both"
		},
		"labels": {
			"bsonType": "string",
			"description": "多个标签以逗号隔开",
			"title": "标签",
			"trim": "both"
		},
		"author": {
			"bsonType": "string",
			"description": "请输入作者",
			"title": "作者",
			"trim": "both"
		},
		"title": {
			"bsonType": "string",
			"title": "标题",
			"description": "请输入标题",
			"trim": "both"
		},
		"article_status": {
			"bsonType": "int",
			"title": "文章状态",
			"description": "文章状态：0 锁定 1 启用",
			"defaultValue": 0,
			"enum": [{
					"value": 0,
					"text": "锁定"
				},
				{
					"value": 1,
					"text": "启用"
				}
			]
		},
		"view_count": {
			"bsonType": "int",
			"title": "阅读数量",
			"description": "阅读数量",
			"permission": {
				"write": false
			}
		},
		"like_count": {
			"bsonType": "int",
			"description": "喜欢数、点赞数",
			"permission": {
				"write": false
			}
		},
		"is_grant": {
			"bsonType": "int",
			"title": "是否授权",
			"description": "是否授权：0 未授权 1 已授权",
			"defaultValue": 0,
			"enum": [{
					"value": 0,
					"text": "未授权"
				},
				{
					"value": 1,
					"text": "已授权"
				}
			]
		},
		"is_encryption": {
			"bsonType": "int",
			"title": "是否加密",
			"description": "是否加密：0 不加密 1 加密",
			"defaultValue": 0,
			"enum": [{
					"value": 0,
					"text": "不加密"
				},
				{
					"value": 1,
					"text": "加密"
				}
			]
		},
		"is_login": {
			"bsonType": "int",
			"title": "是否登录",
			"description": "是否登录：0 不登录 1 登录",
			"defaultValue": 0,
			"enum": [{
					"value": 0,
					"text": "不登录"
				},
				{
					"value": 1,
					"text": "登录"
				}
			]
		},
		"is_sticky": {
			"bsonType": "bool",
			"title": "是否置顶",
			"description": "是否置顶",
			"permission": {
				"write": false
			}
		},
		"is_essence": {
			"bsonType": "bool",
			"title": "阅读加精",
			"description": "阅读加精",
			"permission": {
				"write": false
			}
		},
		"avatar": {
			"bsonType": "file",
			"fileMediaType": "image",
			"title": "封面大图",
			"description": "缩略图地址",
			"label": "封面大图",
			"trim": "both"
		},
		"resources": {
			"bsonType": "array",
			"fileMediaType": "all",
			"arrayType": "file",
			"multiple": "true",
			"title": "附件资源",
			"description": "附件资源，图片，文章，视频，音乐等"
		},
		"publish_date": {
			"bsonType": "timestamp",
			"title": "发表时间",
			"description": "发表时间",
			"defaultValue": {
				"$env": "now"
			},
			"permission": {
				"write": false
			}
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"title": "最后修改时间",
			"description": "最后修改时间",
			"defaultValue": {
				"$env": "now"
			},
			"permission": {
				"write": false
			}
		},
		"zy_gs": {
			"bsonType": "string",
			"title": "资源格式",
			"description": "资源格式，如img图集,text文章，MP3音乐，mp4视频"
		},
		"aliyun_dz": {
			"bsonType": "string",
			"title": "外链",
			"description": "请输入外链地址",
			"label": "外链",
			"trim": "both"
		},
		"excerpt": {
			"bsonType": "string",
			"title": "摘要",
			"description": "请输入摘要",
			"label": "摘要",
			"trim": "both"
		},
		"content": {
			"bsonType": "string",
			"title": "内容",
			"description": "请输入内容",
			"trim": "right"
		}
	}
}
