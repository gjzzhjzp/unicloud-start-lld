{
	"bsonType": "object",
	"required": ["name","flbm"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（文章 ID），系统自动生成"
		},
		"flbm": {
			"bsonType": "string",
			"description": "分类编码",
			"label": "分类编码",
			"trim": "both"
		},
		"parent_flbm": {
			"bsonType": "string",
			"description": "父级分类编码",
			"label": "父级分类编码",
			"parentKey": "flbm"
		},
		"name": {
			"bsonType": "string",
			"description": "类别名称",
			"label": "名称",
			"trim": "both"
		},
		"description": {
			"bsonType": "string",
			"description": "类别描述",
			"label": "描述",
			"trim": "both"
		},
		"icon": {
			"bsonType": "file",
			"fileMediaType": "image",
			"description": "类别图标地址",
			"label": "图标地址",
			"title": "图标地址",
			"trim": "both"
		},
		"path": {
			"bsonType": "string",
			"description": "点击跳转地址",
			"label": "点击跳转地址",
			"title": "点击跳转地址",
			"trim": "both"
		},
		"sort": {
			"bsonType": "int",
			"description": "类别显示顺序",
			"label": "排序",
			"permission": {
				"write": false
			}
		},
		"article_count": {
			"bsonType": "int",
			"description": "该类别下文章数量",
			"permission": {
				"write": false
			}
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
