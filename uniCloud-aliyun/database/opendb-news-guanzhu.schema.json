{
	"bsonType": "object",
	"required": ["user_id", "buser_id"],
	"permission": {
		"read": true,
		"create": "auth.uid != null",
		"update": true,
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "关注 ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"title": "关注人ID",
			"description": "关注人ID，参考`uni-id-users` 表",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"buser_id": {
			"bsonType": "string",
			"title": "被关注人ID",
			"description": "被关注人ID，参考`uni-id-users` 表",
			"foreignKey": "uni-id-users._id"
		},
		"guanzhu_date": {
			"title": "关注时间",
			"bsonType": "timestamp",
			"description": "关注时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
