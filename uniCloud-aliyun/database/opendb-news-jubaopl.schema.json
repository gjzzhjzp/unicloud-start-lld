{
	"bsonType": "object",
	"required": ["article_id","comment_id", "user_id","jubao_content"],
	"permission": {
		"read": "doc.user_id == auth.uid",
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成,举报评论"
		},
		"article_id": {
			"bsonType": "string",
			"title": "文章ID",
			"description": "文章ID，opendb-news-posts 表中的`_id`字段",
			"foreignKey": "opendb-news-articles._id"
		},
		"comment_id": {
			"bsonType": "string",
			"description": "评论id，参考opendb-news-comments表",
			"foreignKey": "opendb-news-comments._id"
		},
		"jubao_content": {
			"bsonType": "string",
			"title": "举报原因",
			"description": "举报原因"
		},
		"user_id": {
			"bsonType": "string",
			"description": "举报id，参考uni-id-users表",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "举报时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
